<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="1360px"
    android:layout_height="160px"
    android:background="@drawable/shape_dialog"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="42px"
        android:layout_height="42px"
        android:id="@+id/window_finish"
        android:layout_marginLeft="39px"
        android:src="@drawable/select_expand" />

    <LinearLayout
        android:layout_width="642px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="126px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/window_thz"
            android:layout_width="458.5px"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">
            <ImageView
                android:id="@+id/window_keyboard_btn"
                android:layout_width="96px"
                android:layout_height="96px"
                android:src="@drawable/select_mini_keyboard" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/window_yuying"
                android:layout_width="96px"
                android:layout_height="96px"
                android:src="@drawable/select_mini_voice" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/window_decice"
                android:layout_width="96px"
                android:layout_height="96px"
                android:src="@drawable/select_mini_hands_free" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="136px"
            android:id="@+id/window_answer"
            android:layout_height="136px"
            android:background="@drawable/anination_call_btn" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/window_hangup"
            android:layout_width="96px"
            android:layout_height="96px"
            android:src="@drawable/select_mini_hangup" />
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/window_tbd"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="160px"
        android:orientation="vertical"
        android:layout_marginLeft="100px"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16px"
            android:layout_height="28px">

            <TextView
                android:layout_width="wrap_content"
                android:text=""
                android:id="@+id/window_type"
                android:textSize="24px"
                android:textColor="@color/btcolor11"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="6px"
                android:layout_toLeftOf="@id/window_type"
                android:layout_marginRight="20px"
                android:src="@drawable/juxing"
                android:layout_height="28px" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:text=""
            android:textSize="40px"
            android:singleLine="true"
            android:id="@+id/window_name"
            android:gravity="right"
            android:layout_marginTop="37px"
            android:textColor="@color/btcolor5"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="128px"
        app:cardCornerRadius="64px"
        android:layout_marginLeft="76px"
        android:background="@color/btcolor10"
        android:layout_height="128px">
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/icon_contact_image"
            android:scaleType="center"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="101px"
            android:gravity="center"
            android:id="@+id/window_firName"
            android:textColor="#fff"
            android:layout_gravity="bottom|right"
            android:textSize="108px"
            android:text=""
            android:layout_height="128px" />
    </android.support.v7.widget.CardView>
